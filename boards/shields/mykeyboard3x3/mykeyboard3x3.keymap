#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    macros {
        new_macro: new_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp A>;
            label = "NEW_MACRO";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -------------------------------------
            // |     Z     |     M     |     K     |
            // |     A     |     B     |     C     |
            // |     D     |     E     |     F     |

            bindings = <
                    &kp Z  &kp M  &kp K
                    &kp A  &kp B  &kp C
                    &kp D  &kp E  &kp F
            >;
        };
        sensor-bindings = <&inc_dec_kp PG_UP PG_DN>;
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };
};
